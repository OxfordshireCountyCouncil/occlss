    "outdent": "^0.8.0",
    "puppeteer": "^20.2.0",
    "rollup": "^3.21.7",
    "sitemap": "^7.1.1",
    "slash": "^3.0.0",
    "standard": "^17.0.0",
    "stylelint": "^14.16.1",
    "stylelint-order": "^6.0.3",
    "tap-mocha-reporter": "^5.0.3"
  },
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.1.0 || ^9.1.0"
  }
}
