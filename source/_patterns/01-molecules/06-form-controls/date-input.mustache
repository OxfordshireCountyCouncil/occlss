<fieldset class="occlss-form__group">
    <legend class="occlss-form__group-title">Date of birth</legend>

    <div class="occlss-form__inline-fields">
        <div class="occlss-form__input-group occlss-form__input-group--day">
            <label class="occlss-form__label occlss-form__label--small" for="date_of_birth_2">Day</label>
            <input class="occlss-form__input" aria-describedby="dobHint" id="date_of_birth_2" name="date_of_birth_2" pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" type="number" min="1" max="31" value="">
        </div>
        <div class="occlss-form__input-group occlss-form__input-group--month">
            <label class="occlss-form__label occlss-form__label--small" for="date_of_birth_1">Month</label>
            <input class="occlss-form__input" aria-describedby="dobHint" id="date_of_birth_1" name="date_of_birth_1" pattern="0?[1-9]|1[012]" type="number" min="1" max="12" value="">
        </div>
        <div class="occlss-form__input-group occlss-form__input-group--year">
            <label class="occlss-form__label occlss-form__label--small" for="date_of_birth_3">Year</label>
            <input class="occlss-form__input" aria-describedby="dobHint" id="date_of_birth_3" name="date_of_birth_3" pattern="[0-9]{4}" type="number" min="1900" max="2000" value="">
        </div>
    </div>
    <span class="occlss-form__hint-text" id="dobHint">For example: 04 28 1986</span>
    
</fieldset>