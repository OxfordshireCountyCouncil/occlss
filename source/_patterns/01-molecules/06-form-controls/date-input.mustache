<fieldset>
    <legend class="occlss-form__group-title occlss-u-bspace-none">Date of birth</legend>
    <span class="occlss-form__hint-text occlss-u-bspace-sm" id="dobHint">For example: 04 28 1986</span>
    <div class="occlss-form-cntrs occlss-form-cntrs--day">
        <label class="occlss-form-cntrs__label occlss-form-cntrs__label--small" for="date_of_birth_2">Day</label>
        <input class="occlss-form-cntrs__input" aria-describedby="dobHint" id="date_of_birth_2" name="date_of_birth_2" pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" type="number" min="1" max="31" value="">
    </div>
    <div class="occlss-form-cntrs occlss-form-cntrs--month">
        <label class="occlss-form-cntrs__label occlss-form-cntrs__label--small" for="date_of_birth_1">Month</label>
        <input class="occlss-form-cntrs__input" aria-describedby="dobHint" id="date_of_birth_1" name="date_of_birth_1" pattern="0?[1-9]|1[012]" type="number" min="1" max="12" value="">
    </div>
    <div class="occlss-form-cntrs occlss-form-cntrs--year">
        <label class="occlss-form-cntrs__label occlss-form-cntrs__label--small" for="date_of_birth_3">Year</label>
        <input class="occlss-form-cntrs__input" aria-describedby="dobHint" id="date_of_birth_3" name="date_of_birth_3" pattern="[0-9]{4}" type="number" min="1900" max="2000" value="">
    </div>
</fieldset>