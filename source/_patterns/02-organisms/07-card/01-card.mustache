{{#cardDefault}}
    <article class="occlss-card">

        <figure class="occlss-card__image-container">
            <img src="{{ card-image-url }}" class="occlss-card__image" alt="{{ card-image-alt-tex }}">
        </figure>

        <header class="occlss-card__header">
            <h4 class="occlss-card__title">{{ card-title-text }}</h4>
        </header>

        <div class="occlss-card__main">
        {{#card-text}}
            <p>{{paragraph}}</p>
        {{/card-text}}
        </div>

        <footer class="occlss-card__footer">
            <a href="{{ card-link-url }}" class="occlss-u-more-link occlss-u-more-link--dark">
                {{card-link-title}}
                <span class="occlss-icon occlss-icon--arrow-right-long-right-secondary" aria-hidden="true">
                    <svg aria-hidden="true" class="occlss-icon__container occlss-u-more-link__icon">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../images/occlss-sprite.svg#arrow-right-long-right-secondary" class="icon__source icon__source--svg"></use>
                    </svg>
                </span>
            </a>
        </footer>

    </article>
{{/cardDefault}}