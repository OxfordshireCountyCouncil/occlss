{{> organisms-page-head-with-login-nav }}

<div id="occlss-main-content">
    <div class="occlss-wrapper">
        <div class="occlss-layout occlss-layout--gutter-s">
            <div class="occlss-layout__col occlss-layout__col--sm-10">
                {{> atoms-heading(occlss-heading-text: "Apply for a Blue Badge", occlss-heading-tag: "h1",occlss-heading-class: "occlss-u-tspace-large",occlss-heading-secondary-text:"") }}
                <div class="occlss-trim occlss-trim--green">
                <!-- green trim -->
                <form class="occlss-form">
                    <fieldset>
                        <legend class="occlss-form__group-title occlss-form__group-title--large occlss-u-bspace-large">{{formTitle}}</legend>

                        {{#firtstGroup}}
                        <fieldset>
                            <legend class="occlss-form__group-title">{{groupTitle}}</legend>
                            <ul class="occlss-form__listitems">
                                {{#options}}
                                    {{> molecules-radio-button }}
                                {{/options}}
                            </ul>
                        </fieldset>
                        {{/firtstGroup}}

                    </fieldset>

                    <nav class="occlss-form__controls occlss-u-bspace-large" role="navigation">
                        <ul class="occlss-form__listitems">
                            <li class="occlss-form__controls-list-item occlss-form__controls-list-item--spaced">
                                <a href="{{ link.forms-form-personal-details }}" class="occlss-button occlss-button--neutral">Back</a>
                            </li>
                            <li class="occlss-form__controls-list-item">
                                <a href="{{ link.forms-form-select-an-option }}" class="occlss-button occlss-button--primary occlss-form__submit">Continue</a>
                            </li>
                        </ul>
                    </nav>

                </form>

                </div>

            </div>
        </div>
    </div>
</div>

{{> organisms-page-footer }}