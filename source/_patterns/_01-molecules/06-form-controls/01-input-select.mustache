<{{form-cntrs-tag}} class="occlss-form-cntrls {{form-cntrs-class}} {{#form-cntrs-error-text}}occlss-form-cntrls--error{{/form-cntrs-error-text}}">
    <label class="occlss-form-cntrls__label {{form-cntrs-label-class}} {{#form-cntrs-error-text}}occlss-form-cntrls__label--error{{/form-cntrs-error-text}}" for="{{form-cntrs-name}}">{{form-cntrs-label-text}}</label>
    <select class="occlss-form-cntrls__select {{form-cntrs-select-class}}" id="{{form-cntrs-name}}" name="{{form-cntrs-name}}" {{#form-cntrs-error-text}}aria-describedby="inpt-errr-desckid-{{form-cntrs-name}}"{{/form-cntrs-error-text}}>
        {{#form-cntrs-select-options}}
            <option value="{{form-cntrs-select-options-value}}">{{form-cntrs-select-options-name}}</option>
        {{/form-cntrs-select-options}}
    </select>
    {{#form-cntrs-error-text}}
    <span class="occlss-icon occlss-icon--exclamation-mark occlss-icon--error" aria-hidden="true">
        <svg aria-hidden="true" class="occlss-icon__container">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../images/occlss-sprite.svg#exclamation-mark" class="icon__source icon__source--svg"></use>
        </svg>
    </span>
    <span class="occlss-form__error-message" id="inpt-errr-desckid-{{form-cntrs-name}}" role="alert">{{form-cntrs-error-text}}</span>
    {{/form-cntrs-error-text}}
</{{form-cntrs-tag}}>