{{ occlssPageHead({
  type: "default",
  section: "residents"
}) }}

<main role="main" id="occlss-main-content">

	<div class="occlss-wrapper">
		<div class="occlss-breadcrumb occlss-breadcrumb--no-space">

			{{ occlssBreadcrumb({
					spaceAfter: false,
					items: [
						{
							itemName: "Home",
							url: "javascript:void(0);"
						},{
							itemName: "Schools",
							url: "javascript:void(0);"
						}
					]
				}) }}

		</div>
	</div>

  <div class="occlss-wrapper occlss-wrapper--secondary">
    <!-- Page header -->
