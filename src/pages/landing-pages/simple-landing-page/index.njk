      <header class="occlss-layout__col occlss-layout__col--md-12">
        <h1 class="occlss-g-heading-main">Schools</h1>
      </header>
    </div>
    <!-- END :: Page header -->
    <!-- Page content -->
    <div class="occlss-layout occlss-layout--gutter-s">
        <!-- Promoted content panel -->
        <div class="occlss-layout__col occlss-layout__col--bleed occlss-layout__col--md-12">
            <div class="occlss-layout">

                <div class="occlss-layout__col occlss-layout__col--flex occlss-layout__col--lg-4 occlss-layout__col--md-4 occlss-layout__col--sm-12 occlss-layout__col--xs-12">
                  {{ occlssPromotedContentPanel({
                  panelColour: "aqua-dee",
                  panelURL: "javascript:void(0);",
                  textRows: [
                      {
                      text: "This term ends Wednesday 24 July",
                      textSize: "text-medium",
                      showArrow: "false"
                      },{
                      text: "The next term starts 3 September",
                      textSize: "text-line",
                      showArrow: "true"
                      }
                    ]
                  }) }}
                </div>

                <div class="occlss-layout__col occlss-layout__col--flex occlss-layout__col--lg-4 occlss-layout__col--md-4 occlss-layout__col--sm-12 occlss-layout__col--xs-12">
                  {{ occlssPromotedContentPanel({
                  panelColour: "aqua-dee",
                  panelURL: "javascript:void(0);",
                  textRows: [
                      {
                      text: "Schools search",
                      textSize: "text-medium",
                      showArrow: "false"
                      },{
                      text: "Search by school type and town.",
                      textSize: "text-line",
                      showArrow: "true"
                      }
                    ]
                  }) }}
                </div>
                <div class="occlss-layout__col occlss-layout__col--flex occlss-layout__col--lg-4 occlss-layout__col--md-4 occlss-layout__col--sm-12 occlss-layout__col--xs-12">
                  {{ occlssPromotedContentPanel({
                  panelColour: "pale-sky",
                  panelURL: "javascript:void(0);",
                  textRows: [
                      {
                      text: "Special educational needs",
                      textSize: "text-medium",
                      showArrow: "false"
                      },{
                      text: "The local offer",
                      textSize: "text-line",
                      showArrow: "true"
                      }
                    ]
                  }) }}
                </div>

            </div>
        </div>
        <!-- END :: Promoted content panel -->
        <!-- Short summary -->
        <div class="occlss-layout__col occlss-layout__col--bleed occlss-layout__col--12 occlss-u-bspace-md">

            {{ occlssShortSummary({
              sectionTitle: "In this section",
              modClass: "occlss-short-summary--residents",
              panes: [
                {
                  title: "Term dates and holidays",
                  content: "A summary of Oxfordshire school holidays and school term dates.",
                  url: "javascript:void(0);"
                },{
                  title: "Apply for a school place",
                  content: "Finding out about schools, admissions and how to transfer to another school.",
                  url: "javascript:void(0);"
                },{
                  title: "At school",
                  content: "Starting school, lateness, absences, exclusions, meals and religious education.",
                  url: "javascript:void(0);"
                },{
                  title: "Travelling to school",
                  content: "Advice for schools and parents about school transport and other ways of getting to school.",
                  url: "javascript:void(0);"
                },{
                  title: "Our work with schools",
                  content: "Governors, the virtual school, finance and how we work with schools to improve performance.",
                  url: "javascript:void(0);"
                },{
                  title: "Emergency school closures",
                  content: "A list of schools that have had to close suddenly because of bad weather or other reasons.",
                  url: "javascript:void(0);"
                }
              ]
            }) }}
        </div>
        <!-- END :: Short summary -->
        <!-- Summary list -->
        <div class="occlss-layout__col occlss-layout__col--12">
            <h2 class="occlss-g-xxx-large-text occlss-u-bspace-none">Related content</h2>
        </div>
        <div class="occlss-layout__col occlss-layout__col--flex occlss-layout__col--md-4">
            
        </div>
        <!-- END :: Summary list -->
    </div>
    <!-- END :: Page content -->
  </div>


</main>



