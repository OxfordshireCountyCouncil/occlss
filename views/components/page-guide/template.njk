<aside class="occlss-page-guide" role="complementary">
  <nav role="navigation" class="occlss-layout" aria-label="Pages in this guide">
	<ol class="occlss-layout__col occlss-layout__col--sm-6 occlss-page-guide__column">
		{% set loopcount = params.items | length / 2  %}
		{% for item in params.items %}
			{% if item.url %}
				<li class="occlss-page-guide__item"><a href="{{ item.url }}">{{ item.title }}</a></li>
			{% else %}
				<li class="occlss-page-guide__item">{{ item.title }}</li>
			{% endif %}
			{% if(loopcount | round  == loop.index) %}
	  </ol>
	  <ol class="occlss-layout__col occlss-layout__col--sm-6 occlss-page-guide__column" start="{{ loop.index + 1 }}">
			{% endif %}
		{% endfor %}
      </ol>
  </nav>
</aside>